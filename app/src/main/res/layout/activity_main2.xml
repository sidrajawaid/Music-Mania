<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sidra.mymusicapp.Main2Activity">
    <ImageView
        android:id="@+id/seconddp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:background="#000000"
        android:padding="1dp"
        />
    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="123dp" />


    <Button
        android:id="@+id/playbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/playbtn" />

    <Button
        android:id="@+id/nextbtn"
        android:background="@drawable/nextbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playbtn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="26dp"
         />

    <Button
        android:id="@+id/previousbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/playbtn"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/previousbtn" />

    <TextView
        android:id="@+id/songcurrent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/previousbtn"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp"
        android:text="0:0" />

    <TextView
        android:id="@+id/songduration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/songcurrent"
        android:layout_marginRight="10dp"
        android:text="5:0" />

    <TextView
        android:id="@+id/songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seconddp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:text="TextView" />


</RelativeLayout>
